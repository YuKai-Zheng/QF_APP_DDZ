<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:layout_gravity="center">
    <RelativeLayout
        android:id="@+id/r_web_layout"
        android:layout_width="1920px"
        android:layout_height="1080px"
        android:gravity="center" >
        <WebView 
        android:id="@+id/events_show_wv"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dip"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:textColor="#bfa296"
        android:visibility="visible" />
		<Button 
		    android:id="@+id/events_back_btn"
		    android:layout_width="89px"
		    android:layout_height="80px"
		    android:layout_marginLeft="40px"
		    android:layout_marginTop="40px"
		    android:background="@drawable/global_back_up_btn"
		    />
    <ProgressBar
        android:id="@+id/events_download_pro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>